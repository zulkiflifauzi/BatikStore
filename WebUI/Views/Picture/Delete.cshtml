@model WebUI.Models.ViewModelPicture

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Picture</h2>

<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm())
{
    <fieldset>

        <div class="display-field">
            <img width="200" height="200" src="@Model.Url">
        </div>

        <div class="display-label">Description</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>

        @Html.HiddenFor(model => model.Product_ProductId)
    </fieldset>
    <p>
        <input type="submit" value="Delete" /> | 
        @Html.ActionLink("Back to List", "List", new { id = Model.Product_ProductId })        
    </p>
}

